- if controller_name != 'sessions'
  = link_to('Anmelden', new_session_path(resource_name))
  br

- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to 'Abmelden', new_registration_path(resource_name)
  br

- if devise_mapping.recoverable? && \
     controller_name != 'passwords' && \
     controller_name != 'registrations'
  = link_to 'Passwort vergessen?', new_password_path(resource_name)
  br

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to('Keine Anmeldebest√§tigung erhalten?',
            new_confirmation_path(resource_name))
  br

- if devise_mapping.lockable? && \
     resource_class.unlock_strategy_enabled?(:email) && \
     controller_name != 'unlocks'
  = link_to('Keine Anweisung zum Entsperren erhalten?',
            new_unlock_path(resource_name))
  br

- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to('Mit #{OmniAuth::Utils.camelize(provider)} anmelden',
              omniauth_authorize_path(resource_name, provider))
    br
